void lit(int mat[11][11])
{
  unsigned long start = millis(); 
  while (start + 120000 > millis())
  {
    for(int col = 0; col < 11; col++)
    {
      digitalWrite(columnPins[col], HIGH); // connect row to +5 volts
      for(int row = 0; row < 11; row++)
      {
        if ((mat[row][col]) == 1){
        digitalWrite(rowPins[row], LOW); // connect column to Gnd
        }
        delayMicroseconds(150); // a small delay for each LED
        //delay(100);
        
        digitalWrite(rowPins[row], HIGH); // disconnect column from Gnd
      }
      digitalWrite(columnPins[col], LOW); // disconnect LEDs
    }
  }
}

void addMatrix(int a[11][11], int b[11][11], int c[11][11])
{
  for (int i = 0; i < 11; i++)
  {
    for (int j = 0; j < 11; j++)
    {
      c[i][j] = a[i][j] + b[i][j];
      if (c[i][j] > 1)
      {
        c[i][j] = 1;
      }
    }
  }
}
